<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/goods_judge_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="华辉肠粉 瘦肉半斤   15元/斤"
        android:padding="8dp"
        android:textColor="@color/text_common"
        android:textSize="14sp"
        android:gravity="center_vertical"
        />
    <Button
        android:id="@+id/goods_judge_middle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/goods_judge_goods"
        android:text="中等"
        android:layout_centerHorizontal="true"
        android:background="@drawable/redcircle"
        android:textColor="@color/text_common"
        android:textSize="12sp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/goods_judge_two"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/goods_judge_goods"
        android:text="一般"
        android:layout_toLeftOf="@+id/goods_judge_middle"
        android:layout_alignTop="@+id/goods_judge_middle"
        android:layout_marginRight="35dp"
        android:background="@drawable/redcircle"
        android:textColor="@color/text_common"
        android:textSize="12sp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/goods_judge_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/goods_judge_two"
        android:layout_alignTop="@+id/goods_judge_middle"
        android:layout_marginRight="35dp"
        android:text="不鲜"
        android:layout_centerHorizontal="true"
        android:background="@drawable/redcircle"
        android:textColor="@color/text_common"
        android:textSize="12sp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/goods_judge_four"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/goods_judge_goods"
        android:text="新鲜"
        android:layout_toRightOf="@+id/goods_judge_middle"
        android:layout_alignTop="@+id/goods_judge_middle"
        android:layout_marginLeft="35dp"
        android:background="@drawable/redcircle"
        android:textColor="@color/text_common"
        android:textSize="12sp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/goods_judge_five"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/goods_judge_goods"
        android:text="好吃"
        android:layout_toRightOf="@+id/goods_judge_four"
        android:layout_alignTop="@+id/goods_judge_middle"
        android:layout_marginLeft="35dp"
        android:background="@drawable/redcircle"
        android:textColor="@color/text_common"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorLineItem"
        android:layout_below="@+id/goods_judge_five"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
