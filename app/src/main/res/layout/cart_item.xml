<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cart_shop_header"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/redcircle"

        />
    <TextView
        android:id="@+id/cart_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cart_shop_header"
        android:layout_alignTop="@+id/cart_shop_header"
        android:layout_marginLeft="50dp"
        android:text="中国好商店"
        android:textColor="@color/text_common"
        android:textSize="15sp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/cart_shopping_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/cart_shop_name"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/cart_shopping_header"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/cart_shopping_image"
        android:layout_alignLeft="@+id/cart_shop_header"
        android:scaleType="fitCenter"
        android:src="@drawable/redcircle"/>


</com.zhy.android.percent.support.PercentRelativeLayout>
